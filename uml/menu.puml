@startuml Menu

class Menu {
    .. props ..
    + function exportTimetable
    .. Context Usage ..
    + useSettings() hook
    .. state ..
    + string mode
    __
    + void handleModeChange(newMode)
    + Component modeSwitch(param)
    + JSX.Element render()
}

class Button {
    .. props ..
    + string text
    + string icon
    + string mode
    + function set
    __
    + JSX.Element render()
}

class SubjectAdder {
    .. Context Usage ..
    + useTimetable() hook
    .. state ..
    + string subjectName
    + string subjectCode
    __
    + void handleSubmit(event)
    + JSX.Element render()
}

class ServerQuery {
    .. Context Usage ..
    + useTimetable() hook
    .. state ..
    + string subjectNameCode
    + string instructorName
    + Array courses
    + Array subjects
    + boolean dataIsLoaded
    + string semester
    __
    + async fetchData()
    + void handleSubmit(event)
    + JSX.Element render()
}

class ImportExport {
    .. props ..
    + function exportTimetable
    .. Context Usage ..
    + useTimetable() hook
    __
    + void downloadJSON()
    + void uploadJSON(event)
    + JSX.Element render()
}

class ImportModal {
    .. props ..
    + Array courses
    + Array subjects
    + boolean dataIsLoaded
    .. Context Usage ..
    + useTimetable() hook
    .. state ..
    + Array selectedSubjects
    + Object selectedCourses
    __
    + Array getCourseIdsForSubject(subjectCode)
    + void handleSubjectChange(subjectId, subjectCode, checked)
    + void handleCourseChange(courseId, subjectId, subjectCode, checked)
    + void handleImport()
    + JSX.Element render()
}

class Settings {
    .. Context Usage ..
    + useSettings() hook
    .. computed from context ..
    + Object show
    + boolean saturday
    + number slot
    __
    + void setShowSettings(event, value)
    + JSX.Element render()
}

class Help {
    + JSX.Element render()
}

Menu o-- "many" Button
Menu o-- SubjectAdder
Menu o-- ServerQuery
Menu o-- ImportExport
Menu o-- Settings
Menu o-- Help
ServerQuery o-- ImportModal

